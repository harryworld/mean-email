<!DOCTYPE html>
<html lang="en" ng-app="emailApp">
<head>
  <meta charset="UTF-8">
  <title>Express Email</title>
</head>
<body>
  <div ng-controller="EmailController">
    <h1>Angular.JS + Email</h1>
    <form ng-submit="submitForm()">
      Email: <input type="email" ng-model="emailText" size="30" placeholder="test@example.com">
      <input type="submit">
    </form>

    <hr/>
    <div class="status"></div>
  </div>

  <div id="container" style="width: 800px; height: 600px; background-color: yellow;"></div>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
  <script src="js/all.min.js"></script>
  <script src="http://code.highcharts.com/highcharts.js"></script>
  <script src="http://code.highcharts.com/modules/exporting.js"></script>
  <script type="text/javascript">
    $(function () {
      var result = [3, 4, 5, 8, 11, 15, 17, 16, 14, 10, 6, 4];

      $('#container').highcharts({
          chart: {
              type: 'line'
          },
          title: {
              text: 'Monthly Email Sent'
          },
          subtitle: {
              text: 'Source: mailgun.com'
          },
          xAxis: {
              categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']
          },
          yAxis: {
              title: {
                  text: '# of Emails'
              }
          },
          plotOptions: {
              line: {
                  dataLabels: {
                      enabled: true
                  },
                  enableMouseTracking: false
              }
          },
          series: [{
              name: 'Mailgun',
              data: result
          }]
      });
    });
  </script>
</body>
</html>